@model IEnumerable<WCFClienteLibreriaDosCapas.ServiceLibreria.EntLibreria>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (TempData["resu"] != null)
{
    <h5 class="alert alert-success">@TempData["resu"]</h5>
}
@if (TempData["error"] != null)
{
    <h5 class="alert alert-danger">@TempData["error"]</h5>
}
@using (Html.BeginForm())
{
<table>
    <tr>
        <td>
            @Html.TextBox("Valor", null, new { @class = "form-control" , placeholder="Buscar Registro" })
        </td>
        <td>
            <input type="submit" name="name" value="Buscar" formaction="/Home/Buscar" class="btn btn-outline-success">
        </td>
    </tr>
</table>
}
<hr />
<p>
    @Html.ActionLink("Nuevo", "Create", null, new { @class= "btn btn-outline-success"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Autor)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Edicion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Editorial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EntCategoria.NombreC)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Autor)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Categoria)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Edicion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Editorial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(model => item.EntCategoria.NombreC)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class="btn btn-outline-warning"})
                @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
            </td>
        </tr>
    }

</table>
